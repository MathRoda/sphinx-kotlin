<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_tribe_profile_info"
    android:background="@color/headerBG"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_tribe_row_1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_price_to_meet_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:text="@string/tribe_member_profile_badges"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/default_form_edit_view_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Badges:" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_badges_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_badge_image_1"
                android:layout_width="@dimen/badges_icon_size"
                android:layout_height="@dimen/badges_icon_size"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card_view_badge_image_2"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="@dimen/badges_icon_radius">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_tribe_badge_picture_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sphinx_icon" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_badge_image_2"
                android:layout_width="@dimen/badges_icon_size"
                android:layout_height="@dimen/badges_icon_size"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card_view_badge_image_3"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="@dimen/badges_icon_radius">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_tribe_badge_picture_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sphinx_icon" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_badge_image_3"
                android:layout_width="@dimen/badges_icon_size"
                android:layout_height="@dimen/badges_icon_size"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card_view_badge_image_4"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="@dimen/badges_icon_radius">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_tribe_badge_picture_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sphinx_icon" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_badge_image_4"
                android:layout_width="@dimen/badges_icon_size"
                android:layout_height="@dimen/badges_icon_size"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="@dimen/badges_icon_radius">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_tribe_badge_picture_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sphinx_icon" />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_tribe_badge_picture_num"
                android:layout_width="@dimen/badges_icon_size"
                android:layout_height="@dimen/badges_icon_size"
                android:background="@drawable/background_badge_number"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:clickable="false"
                android:singleLine="true"
                android:textColor="@color/mainBottomIcons"
                android:textSize="@dimen/default_chip_text_size"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="+5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_badges_arrow_down_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/default_tap_target_xy"
                android:layout_height="@dimen/default_tap_target_xy"
                android:fontFamily="@font/material_icons_regular"
                android:gravity="center"
                android:text="@string/material_icon_name_dismiss_modal_down"
                android:textSize="@dimen/default_text_size_back_arrow"
                android:textColor="@color/secondaryText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_tribe_name_badges_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_tribe_recycler_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/constraint_layout_tribe_row_3"
        app:layout_constraintTop_toBottomOf="@+id/constraint_layout_tribe_row_1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_badges"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/headerBG"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/layout_tribe_profile_badges_holder" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_tribe_row_3"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_layout_tribe_recycler_row">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_reputation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:text="@string/tribe_member_profile_reputation"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/default_form_edit_view_text_size"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Posts:" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_reputation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/primaryText"
            android:textSize="@dimen/default_form_edit_view_text_size"
            android:gravity="right"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/default_layout_margin"
            app:layout_constraintStart_toEndOf="@+id/text_view_reputation_label"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="150" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_tribe_row_4"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_layout_tribe_row_3">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_contributions_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:text="@string/tribe_member_profile_contributions"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/default_form_edit_view_text_size"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Contributions:" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_sats_contributions_plain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:gravity="right"
            android:maxLines="1"
            android:text="@string/sats"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/default_form_edit_view_text_size"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="sats" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_sats_contributions_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:gravity="right"
            android:maxLines="1"
            android:textColor="@color/primaryGreen"
            android:textSize="@dimen/default_form_edit_view_text_size"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_sats_contributions_plain"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.512"
            tools:text="3000" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_tribe_row_5"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/constraint_layout_tribe_row_4"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_earnings_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:text="@string/tribe_member_profile_earnings"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/default_form_edit_view_text_size"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Earnings:" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_sats_earnings_plain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:gravity="right"
            android:maxLines="1"
            android:textColor="@color/primaryText"
            android:text="@string/sats"
            android:textSize="@dimen/default_form_edit_view_text_size"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="sats" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_sats_earnings_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:gravity="right"
            android:maxLines="1"
            android:textColor="@color/primaryBlue"
            android:textSize="@dimen/default_form_edit_view_text_size"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_sats_earnings_plain"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.512"
            tools:text="5000" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>